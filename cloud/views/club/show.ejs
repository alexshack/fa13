<!-- Include the header partial and specify a title -->
<% title = club.get('name') %>

<% include ../_header %>


<script src="/plugins/sparkline/jquery.sparkline.min.js"></script>
<% include ../_menu.ejs %>

<!-- content -->

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
 
    <section class="content">
        <div class="row">   
            <div class="col-md-4 col-sm-12">
                <div class="box box-widget widget-user club-header">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header">
                        <h3 class="widget-user-username"><%= club.get('name') %></h3>
                        <h5 class="widget-user-desc"><%= club.get('city') %></h5>
                    </div>
                    <div class="widget-user-image">
                        <img class="img-circle" src="http://www.fa13.info/image/logo/<%= club.get('clubId') %>.gif" alt="User Avatar">
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-4 border-right">
                                <div class="description-block">
                                    <div id="sparkline-1"></div>
                                    <span class="description-text">Рейтинг</span>
                                    <h5 class="description-header"><%= club.get('raiting') %></h5>
                                 </div><!-- /.description-block -->
                            </div><!-- /.col -->
                            <div class="col-sm-4 border-right">
                                <div class="description-block">
                                    <div id="sparkline-2"></div>
                                    <span class="description-text">Финансы клуба</span>
                                    <h5 class="description-header"><%= (club.get('fc')/1000000).toFixed(2) %> млн</h5>
                                </div><!-- /.description-block -->
                            </div><!-- /.col -->
                            <div class="col-sm-4">
                                <div class="description-block">
                                    <div id="sparkline-3"></div>
                                    <span class="description-text">Стоимость игроков</span>
                                    <h5 class="description-header">40.38 млн</h5>
                                </div><!-- /.description-block -->
                            </div><!-- /.col -->

                        </div><!-- /.row -->
 
                    </div>
                    <div class="box-footer no-padding">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="nav nav-pills nav-stacked">
                                    <li><a href="#">Игроки <span class="pull-right"> 17</span></a></li>
                                    <li><a href="#">Средняя сила <span class="pull-right "> 50.94</span></a></li>
                                    <li><a href="#">Средний талант <span class="pull-right"> 67.18</span></a></li>
                                    <li><a href="#">Средний возраст <span class="pull-right"> 28.00</span></a></li>
                                    <li><a href="#">ЗП игроков <span class="pull-right"> 1.21 млн.</span></a></li>                                    
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="nav nav-pills nav-stacked">
                                    <li><a href="#">КГТ <span class="pull-right"> <%= (club.get('coach')-200).toFixed(0) %></span></a></li>
                                    <li><a href="#">Доктор <span class="pull-right "> <%= club.get('doctorPlayers') %>/<%= club.get('doctorQualification') %></span></a></li>
                                    <li><a href="#">Скаут <span class="pull-right"> <%= club.get('scout') %></span></a></li>
                                    <li><a href="#">Тренера <span class="pull-right"> <%= club.get('goalkeepersCoach') %>/<%= club.get('defendersCoach') %>/<%= club.get('midfieldersCoach') %>/<%= club.get('forwardsCoach') %>/<%= club.get('fitnessCoach') %>/<%= club.get('moraleCoach') %></span></a></li>
                                    <li><a href="#">ЗП тренеров <span class="pull-right"> 200 тыс.</span></a></li>  
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer text-center">
                        <a href="#" class="uppercase">Статистика <i class="fa  fa-angle-double-right"></i></a>
                    </div>
                </div>

            </div>
        </div>
    </section>

        <!-- Main content -->

    </div><!-- /.content-wrapper -->

<!-- Include the footer partial -->
<% include ../_footer %>

<script>
var myvalues = [1000, 1200, 920, 927, 931, 1027, 819, 930, 1021];
  $('#sparkline-1').sparkline(myvalues, {
    type: 'line',
    lineColor: '#92c1dc',
    fillColor: "#ebf4f9",
    height: '50',
    width: '80'
  });
  myvalues = [515, 519, 520, 522, 652, 810, 370, 627, 319, 630, 921];
  $('#sparkline-2').sparkline(myvalues, {
    type: 'line',
    lineColor: '#92c1dc',
    fillColor: "#ebf4f9",
    height: '50',
    width: '80'
  });
  myvalues = [15, 19, 20, 22, 33, 27, 31, 27, 19, 20, 21];
  $('#sparkline-3').sparkline(myvalues, {
    type: 'line',
    lineColor: '#92c1dc',
    fillColor: "#ebf4f9",
    height: '50',
    width: '80'
  });
</script>





